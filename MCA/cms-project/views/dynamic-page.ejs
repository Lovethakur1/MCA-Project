<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= contentData.title || 'Dynamic Page' %> - MCA</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.0/css/all.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300..800;1,300..800&display=swap"
        rel="stylesheet">
    <meta name="description" content="<%= contentData.metaDescription || '' %>">
</head>

<body>

    <%- include('partials/navbar') %>

    <!-- HERO SECTION  -->
    <section class="hero-section">
        <% if (contentData.hero && contentData.hero.backgroundVideo) { %>
        <video autoplay muted loop playsinline class="bg-video">
            <source src="/media/<%= contentData.hero.backgroundVideo %>" type="video/mp4" />
            Your browser does not support the video tag.
        </video>
        <% } else if (contentData.hero && contentData.hero.backgroundImage) { %>
        <div class="hero-bg-image" style="background-image: url('/media/<%= contentData.hero.backgroundImage %>')"></div>
        <% } else { %>
        <video autoplay muted loop playsinline class="bg-video">
            <source src="/media/homebackground.mp4" type="video/mp4" />
            Your browser does not support the video tag.
        </video>
        <% } %>

        <% if (contentData.hero && (contentData.hero.title || contentData.hero.subtitle || contentData.hero.description || contentData.hero.ctaText)) { %>
        <div class="hero-content">
            <% if (contentData.hero.hashtag) { %>
            <h1 class="hashtag">#<%= contentData.hero.hashtag %></h1>
            <% } %>
            <% if (contentData.hero.title) { %>
            <h2><%= contentData.hero.title %></h2>
            <% } %>
            <% if (contentData.hero.subtitle) { %>
            <h3><%= contentData.hero.subtitle %></h3>
            <% } %>
            <% if (contentData.hero.description) { %>
            <p><%= contentData.hero.description %></p>
            <% } %>
            <% if (contentData.hero.ctaText && contentData.hero.ctaLink && contentData.hero.showCTA) { %>
            <a href="<%= contentData.hero.ctaLink %>" class="hero-btn"><%= contentData.hero.ctaText %></a>
            <% } %>
        </div>
        <% } %>
    </section>

    <!-- SERVICES SECTION  -->
    <section class="homegym-section">
        <div class="homegym-container">
            <% if (contentData.services && contentData.services.sectionTitle) { %>
            <div class="section-header text-center">
                <h2><%= contentData.services.sectionTitle %></h2>
                <% if (contentData.services.sectionDescription) { %>
                <p><%= contentData.services.sectionDescription %></p>
                <% } %>
            </div>
            <% } %>
            
            <div class="homegym-cards-grid">
                <% 
                // Use dynamic services from contentData or defaults
                let servicesList = [];
                
                if (contentData.services && contentData.services.items && contentData.services.items.length > 0) {
                    servicesList = contentData.services.items;
                } else {
                    // Default services
                    servicesList = [
                        {
                            title: 'Personal Training',
                            description: 'Train exclusively, benefit optimally: Your personal 1:1 coaching with a clear focus on your goals. Our holistic approach promotes the harmony of body and mind – for greater well-being and sustainable success.',
                            price: 'CHF 150.– per hour',
                            icon: '/media/Symbol.png',
                            link: '#'
                        },
                        {
                            title: 'Partner Personal Training', 
                            description: 'Train together with your partner – your individual goals take center stage. Even during joint training, personalized guidance remains top-tier.',
                            price: 'CHF 250.– per hour',
                            icon: '/media/myimage.png.png',
                            link: '#'
                        },
                        {
                            title: 'Senior Personal Training',
                            description: 'Targeted personal training for seniors – so you can remain independent and self-reliant as long as possible. Our goal: Preserve and strategically enhance your quality of life.',
                            price: 'CHF 150.– per hour', 
                            icon: '/media/Symbol (1).png',
                            link: '#'
                        }
                    ];
                }

                servicesList.forEach(service => { %>
                <div class="homegym-card">
                    <div class="homegym-icon">
                        <img src="<%= service.icon && service.icon.startsWith('/') ? service.icon : '/media/' + (service.icon || 'Symbol.png') %>">
                    </div>
                    <h3 class="homegym-card-title"><%= service.title %></h3>
                    <p class="homegym-card-description"><%= service.description %></p>
                    <% if (service.price) { %>
                    <div class="homegym-price"><%= service.price %></div>
                    <% } %>
                    <a href="<%= service.link || '#' %>" class="homegym-btn">More Information</a>
                </div>
                <% }); %>
            </div>
        </div>
    </section>

    <!-- TEAM SECTION  -->
    <% if (contentData.team) { %>
    <section class="team-section">
        <div class="team-container">
            <div class="team-text">
                <p class="subtitle"><%= contentData.team.sectionSubtitle || 'THIS IS US' %></p>
                <h2><%= contentData.team.sectionTitle || 'THIS TEAM HAS ONE GOAL: YOUR SUCCESS' %></h2>
                <% if (contentData.team.description) { %>
                <p><%= contentData.team.description %></p>
                <% } %>
                <div class="team-buttons">
                    <% if (contentData.team.primaryButtonText) { %>
                    <a href="<%= contentData.team.primaryButtonLink || '#' %>" class="team-btn primary">
                        <%= contentData.team.primaryButtonText %>
                    </a>
                    <% } %>
                    <% if (contentData.team.secondaryButtonText) { %>
                    <a href="<%= contentData.team.secondaryButtonLink || '#' %>" class="team-btn secondary">
                        <%= contentData.team.secondaryButtonText %>
                    </a>
                    <% } %>
                </div>
            </div>

            <div class="team-members">
                <% 
                let teamMembersList = [];
                
                if (contentData.team && contentData.team.members && contentData.team.members.length > 0) {
                    teamMembersList = contentData.team.members;
                } else {
                    // Default team members
                    teamMembersList = [
                        { name: 'MALTE PRIMUS', position: 'Co-Founder & Head Coach', photo: '/media/malte.jpg', bio: '', email: '', phone: '', social_linkedin: '', social_instagram: '' },
                        { name: 'MAX BARDE', position: 'Co-Founder & Head Coach', photo: '/media/max.jpg', bio: '', email: '', phone: '', social_linkedin: '', social_instagram: '' }
                    ];
                }
                
                teamMembersList.forEach(member => { %>
                <div class="team-member">
                    <img src="<%= member.photo && member.photo.startsWith('/') ? member.photo : '/media/' + (member.photo || 'default-avatar.jpg') %>" alt="<%= member.name %>">
                    <h3><%= member.name %></h3>
                    <p><%= member.position %></p>
                    <% if (member.bio) { %>
                    <div class="member-bio">
                        <p><%= member.bio %></p>
                    </div>
                    <% } %>
                    <% if (member.social_linkedin || member.social_instagram) { %>
                    <div class="member-social">
                        <% if (member.social_linkedin) { %>
                        <a href="<%= member.social_linkedin %>" target="_blank" rel="noopener noreferrer">
                            <i class="fab fa-linkedin"></i>
                        </a>
                        <% } %>
                        <% if (member.social_instagram) { %>
                        <a href="<%= member.social_instagram %>" target="_blank" rel="noopener noreferrer">
                            <i class="fab fa-instagram"></i>
                        </a>
                        <% } %>
                    </div>
                    <% } %>
                </div>
                <% }); %>
            </div>
        </div>
    </section>
    <% } %>

    <!-- CONCEPT SECTION  -->
    <% if (contentData.concept) { %>
    <section class="concept-section">
        <div class="concept-container">
            <p class="concept-subtitle"><%= contentData.concept.sectionSubtitle || 'THE MCA CONCEPT' %></p>
            <h2 class="concept-title"><%= contentData.concept.sectionTitle || contentData.concept.mainTitle || 'PERSONALIZATION LEADS TO RESULTS' %></h2>
            <p class="concept-description">
                <%= contentData.concept.mainDescription || 'Our personalized approach ensures optimal results for each individual client.' %>
            </p>

            <% if (contentData.concept.features && contentData.concept.features.length > 0) { %>
            <div class="concept-features">
                <% contentData.concept.features.forEach(feature => { %>
                <div class="feature">
                    <div class="feature-icon">
                        <img src="<%= feature.icon && feature.icon.startsWith('/') ? feature.icon : '/media/' + (feature.icon || 'Icon-Team-five-stars.svg.png') %>">
                    </div>
                    <h3 class="feature-title"><%= feature.title %></h3>
                    <p class="feature-text"><%= feature.description %></p>
                </div>
                <% }); %>
            </div>
            <% } %>
        </div>
    </section>
    <% } %>

    <!-- TESTIMONIAL SECTION  -->
    <% if (contentData.testimonials || (typeof featuredTestimonials !== 'undefined' && featuredTestimonials)) { %>
    <section class="reviews-section">
        <div class="reviews-container">
            <h2 class="reviews-heading">
                <%= contentData.testimonials && contentData.testimonials.sectionTitle ? contentData.testimonials.sectionTitle : 'Global Personal Training Client Reviews' %>
            </h2>
            <p class="reviews-subheading">
                <%= contentData.testimonials && contentData.testimonials.sectionDescription ? contentData.testimonials.sectionDescription : 'See what more than 7,500 of our clients across the globe say' %>
            </p>
            <div class="reviews-rating">
                <span class="rating-score">
                    <%= contentData.testimonials && contentData.testimonials.rating ? contentData.testimonials.rating : '4.9 ★★★★★' %>
                </span>
                <p class="rating-count">
                    <%= contentData.testimonials && contentData.testimonials.ratingCount ? contentData.testimonials.ratingCount : 'Based on (7,500+)' %>
                </p>
            </div>

            <div class="reviews-slider-wrapper">
                <button class="arrow-btn left-arrow">&larr;</button>

                <div class="reviews-slider">
                    <% 
                    let testimonialsList = [];
                    
                    // Use dynamic testimonials if available
                    if (contentData.testimonials && contentData.testimonials.items && contentData.testimonials.items.length > 0) {
                        testimonialsList = contentData.testimonials.items;
                    } else if (typeof featuredTestimonials !== 'undefined' && featuredTestimonials && featuredTestimonials.length > 0) {
                        // Use database testimonials
                        featuredTestimonials.forEach(testimonial => {
                            const stars = '★'.repeat(testimonial.rating || 5) + '☆'.repeat(5 - (testimonial.rating || 5));
                            testimonialsList.push({
                                name: testimonial.name,
                                stars: stars,
                                text: testimonial.content,
                                link: '#',
                                linkText: 'Full review'
                            });
                        });
                    } else {
                        // Default testimonials
                        testimonialsList = [
                            {
                                name: 'Rodrigo Maciel (London - City)',
                                stars: '★★★★★',
                                text: 'Joining MCA is the best investment I have ever made. I\'ve achieved results which, after years of hard training and healthy eating, I never thought my body was capable of.',
                                link: '#',
                                linkText: 'Full review on Google'
                            },
                            {
                                name: 'Sarah Johnson (New York)',
                                stars: '★★★★★',
                                text: 'The personalized approach at MCA has transformed my life. The trainers are incredibly knowledgeable and supportive.',
                                link: '#',
                                linkText: 'Full review on Google'
                            }
                        ];
                    }
                    
                    testimonialsList.forEach(testimonial => { %>
                    <div class="testimonial">
                        <h3><%= testimonial.name %></h3>
                        <p class="stars"><%= testimonial.stars %></p>
                        <p class="text"><%= testimonial.text %></p>
                        <a href="<%= testimonial.link %>"><%= testimonial.linkText %></a>
                    </div>
                    <% }); %>
                </div>

                <button class="arrow-btn right-arrow">&rarr;</button>
            </div>
        </div>
    </section>
    <% } %>

    <!-- CONTACT FORM  -->
    <% if (contentData.contact && contentData.contact.showContactForm !== false) { %>
    <div class="contactsection" id="contact">
        <div class="contactleft">
            <h4>
                <%- contentData.contact.sectionTitle || 'GET IN TOUCH <br> FOR A <span>INITIAL <br> CONSULTATION</span>' %>
            </h4>
        </div>
        <div class="contactright">
            <!-- AJAX Success/Error Messages -->
            <div id="contact-message" style="display: none; padding: 15px; border-radius: 5px; margin-bottom: 20px;">
                <i id="contact-icon"></i>
                <span id="contact-text"></span>
            </div>

            <form id="contact-form" method="POST" action="/contact">
                <label>Your name</label>
                <input type="text" name="name" required>

                <label>Phone Number</label>
                <input type="text" name="phone" required>

                <label>Email Address</label>
                <input type="email" name="email" required>

                <label>Service Type</label>
                <select name="service">
                    <% 
                    // Populate service options from services data
                    if (contentData.services && contentData.services.items && contentData.services.items.length > 0) {
                        contentData.services.items.forEach(service => { %>
                    <option><%= service.title %></option>
                    <% }); } else { %>
                    <option>Personal Training</option>
                    <option>Partner Personal Training</option>
                    <option>Health Coaching</option>
                    <% } %>
                </select>

                <label>Your Message</label>
                <textarea name="message" required></textarea>

                <button type="submit" id="contact-submit-btn">
                    <i class="fa fa-paper-plane"></i> 
                    <span id="btn-text">Send Message</span>
                    <span id="btn-loading" style="display: none;">
                        <i class="fa fa-spinner fa-spin"></i> Sending...
