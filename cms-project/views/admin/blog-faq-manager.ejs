<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Admin</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="bg-gray-100">
    <!-- Sidebar -->
    <%- include('./partials/sidebar') %>
    
    <!-- Main Content -->
    <div class="ml-64 flex-1">
        <!-- Header -->
        <header class="bg-white shadow-sm border-b border-gray-200">
            <div class="flex justify-between items-center px-6 py-4">
                <div>
                    <h1 class="text-2xl font-bold text-gray-900"><%= title %></h1>
                    <p class="text-gray-600 mt-1">Manage frequently asked questions for the blog page</p>
                </div>
                <div class="flex items-center space-x-4">
                    <button class="p-2 rounded-lg hover:bg-gray-100 transition duration-200">
                        <i class="fas fa-bell text-gray-600"></i>
                    </button>
                    <div class="relative">
                        <button id="userMenuBtn" class="flex items-center space-x-2 p-2 rounded-lg hover:bg-gray-100 transition duration-200">
                            <div class="w-8 h-8 bg-indigo-600 rounded-full flex items-center justify-center">
                                <i class="fas fa-user text-white text-sm"></i>
                            </div>
                            <span class="text-gray-700 font-medium">Admin</span>
                            <i class="fas fa-chevron-down text-gray-400 text-sm"></i>
                        </button>
                    </div>
                </div>
            </div>
        </header>

        <!-- Content -->
        <main class="p-6">
            <!-- Success/Error Messages -->
            <% if (success) { %>
                <div class="mb-6 bg-green-50 border border-green-200 rounded-lg p-4">
                    <div class="flex">
                        <i class="fas fa-check-circle text-green-400 mt-0.5 mr-3"></i>
                        <div class="text-green-800"><%= success %></div>
                    </div>
                </div>
            <% } %>

            <% if (error) { %>
                <div class="mb-6 bg-red-50 border border-red-200 rounded-lg p-4">
                    <div class="flex">
                        <i class="fas fa-exclamation-circle text-red-400 mt-0.5 mr-3"></i>
                        <div class="text-red-800"><%= error %></div>
                    </div>
                </div>
            <% } %>

            <!-- Actions -->
            <div class="mb-6 flex justify-between items-center">
                <div>
                    <a href="/admin/blog-page" class="text-blue-600 hover:text-blue-800">
                        <i class="fas fa-arrow-left mr-2"></i>
                        Back to Blog Page Management
                    </a>
                </div>
                <button onclick="openFAQModal()" class="bg-purple-600 text-white px-4 py-2 rounded-lg hover:bg-purple-700 transition duration-200">
                    <i class="fas fa-plus mr-2"></i>
                    Add New FAQ
                </button>
            </div>

            <!-- FAQ Table -->
            <div class="bg-white rounded-lg shadow-sm border border-gray-200">
                <div class="px-6 py-4 border-b border-gray-200">
                    <h2 class="text-lg font-semibold text-gray-900">Blog FAQs</h2>
                </div>
                <div class="p-6">
                    <% if (faqs && faqs.length > 0) { %>
                        <div class="overflow-x-auto">
                            <table class="w-full">
                                <thead>
                                    <tr class="border-b border-gray-200">
                                        <th class="text-left py-3 px-4 font-medium text-gray-900">Order</th>
                                        <th class="text-left py-3 px-4 font-medium text-gray-900">Question</th>
                                        <th class="text-left py-3 px-4 font-medium text-gray-900">Category</th>
                                        <th class="text-left py-3 px-4 font-medium text-gray-900">Status</th>
                                        <th class="text-left py-3 px-4 font-medium text-gray-900">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% faqs.forEach(faq => { %>
                                        <tr class="border-b border-gray-100 hover:bg-gray-50">
                                            <td class="py-4 px-4">
                                                <span class="inline-flex items-center justify-center w-8 h-8 bg-gray-100 rounded-full text-sm font-medium text-gray-600">
                                                    <%= faq.order %>
                                                </span>
                                            </td>
                                            <td class="py-4 px-4">
                                                <div>
                                                    <p class="font-medium text-gray-900 mb-1">
                                                        <%= faq.question.substring(0, 60) %><%= faq.question.length > 60 ? '...' : '' %>
                                                    </p>
                                                    <p class="text-sm text-gray-600">
                                                        <%= faq.answer.substring(0, 80) %><%= faq.answer.length > 80 ? '...' : '' %>
                                                    </p>
                                                </div>
                                            </td>
                                            <td class="py-4 px-4">
                                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                                                    <%= faq.category %>
                                                </span>
                                            </td>
                                            <td class="py-4 px-4">
                                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= faq.status === 'published' ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
                                                    <%= faq.status %>
                                                </span>
                                            </td>
                                            <td class="py-4 px-4">
                                                <div class="flex space-x-2">
                                                    <button class="edit-faq-btn text-blue-600 hover:text-blue-800 transition duration-200"
                                                            data-id="<%= faq._id %>"
                                                            data-question="<%= faq.question %>"
                                                            data-answer="<%= faq.answer %>"
                                                            data-category="<%= faq.category %>"
                                                            data-order="<%= faq.order %>"
                                                            data-status="<%= faq.status %>">
                                                        <i class="fas fa-edit"></i>
                                                    </button>
                                                    <form method="POST" action="/admin/blog-faq/<%= faq._id %>/delete" style="display: inline;">
                                                        <button type="submit" 
                                                                onclick="return confirm('Are you sure you want to delete this FAQ?')"
                                                                class="text-red-600 hover:text-red-800 transition duration-200">
                                                            <i class="fas fa-trash"></i>
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                    <% } else { %>
                        <div class="text-center py-12">
                            <i class="fas fa-question-circle text-6xl text-gray-300 mb-4"></i>
                            <h3 class="text-lg font-medium text-gray-900 mb-2">No FAQs Found</h3>
                            <p class="text-gray-600 mb-4">Create your first FAQ to get started.</p>
                            <button onclick="openFAQModal()" class="bg-purple-600 text-white px-4 py-2 rounded-lg hover:bg-purple-700 transition duration-200">
                                <i class="fas fa-plus mr-2"></i>
                                Add New FAQ
                            </button>
                        </div>
                    <% } %>
                </div>
            </div>
        </main>
    </div>

    <!-- FAQ Modal -->
    <div id="faqModal" class="fixed inset-0 bg-black bg-opacity-50 hidden z-50">
        <div class="flex items-center justify-center min-h-screen p-4">
            <div class="bg-white rounded-lg shadow-xl w-full max-w-2xl">
                <div class="px-6 py-4 border-b border-gray-200">
                    <h3 id="modalTitle" class="text-lg font-semibold text-gray-900">Add New FAQ</h3>
                </div>
                <form id="faqForm" method="POST" action="/admin/blog-faq/create">
                    <div class="p-6 space-y-4">
                        <div>
                            <label for="question" class="block text-sm font-medium text-gray-700 mb-2">Question *</label>
                            <input type="text" id="question" name="question" required 
                                   class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-purple-500">
                        </div>

                        <div>
                            <label for="answer" class="block text-sm font-medium text-gray-700 mb-2">Answer *</label>
                            <textarea id="answer" name="answer" rows="4" required 
                                      class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-purple-500"></textarea>
                        </div>

                        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                            <div>
                                <label for="category" class="block text-sm font-medium text-gray-700 mb-2">Category</label>
                                <select id="category" name="category" 
                                        class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-purple-500">
                                    <option value="general">General</option>
                                    <option value="nutrition">Nutrition</option>
                                    <option value="fitness">Fitness</option>
                                    <option value="lifestyle">Lifestyle</option>
                                    <option value="recipes">Recipes</option>
                                    <option value="health">Health</option>
                                </select>
                            </div>
                            <div>
                                <label for="order" class="block text-sm font-medium text-gray-700 mb-2">Display Order</label>
                                <input type="number" id="order" name="order" value="0" min="0" 
                                       class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-purple-500">
                            </div>
                            <div>
                                <label for="status" class="block text-sm font-medium text-gray-700 mb-2">Status</label>
                                <select id="status" name="status" 
                                        class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-purple-500">
                                    <option value="published">Published</option>
                                    <option value="draft">Draft</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="px-6 py-4 border-t border-gray-200 flex justify-end space-x-3">
                        <button type="button" onclick="closeFAQModal()" class="px-4 py-2 text-gray-700 bg-gray-100 rounded-lg hover:bg-gray-200 transition duration-200">
                            Cancel
                        </button>
                        <button type="submit" class="px-4 py-2 bg-purple-600 text-white rounded-lg hover:bg-purple-700 transition duration-200">
                            Save FAQ
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- JavaScript -->
    <script>
        function openFAQModal() {
            document.getElementById('modalTitle').textContent = 'Add New FAQ';
            document.getElementById('faqForm').action = '/admin/blog-faq/create';
            document.getElementById('faqForm').reset();
            document.getElementById('status').value = 'published';
            document.getElementById('faqModal').classList.remove('hidden');
        }

        function closeFAQModal() {
            document.getElementById('faqModal').classList.add('hidden');
        }

        function editFAQ(id, question, answer, category, order, status) {
            document.getElementById('modalTitle').textContent = 'Edit FAQ';
            document.getElementById('faqForm').action = '/admin/blog-faq/' + id + '/update';
            document.getElementById('question').value = question;
            document.getElementById('answer').value = answer;
            document.getElementById('category').value = category;
            document.getElementById('order').value = order;
            document.getElementById('status').value = status;
            document.getElementById('faqModal').classList.remove('hidden');
        }

        // Add event listeners for edit buttons
        document.addEventListener('DOMContentLoaded', function() {
            document.querySelectorAll('.edit-faq-btn').forEach(button => {
                button.addEventListener('click', function() {
                    const id = this.dataset.id;
                    const question = this.dataset.question;
                    const answer = this.dataset.answer;
                    const category = this.dataset.category;
                    const order = this.dataset.order;
                    const status = this.dataset.status;
                    
                    editFAQ(id, question, answer, category, order, status);
                });
            });
        });

        // Close modal when clicking outside
        document.getElementById('faqModal').addEventListener('click', function(e) {
            if (e.target === this) {
                closeFAQModal();
            }
        });

        // Sidebar toggle functionality
        document.getElementById('sidebarToggle')?.addEventListener('click', function() {
            document.getElementById('sidebar').classList.toggle('-translate-x-full');
        });
    </script>
</body>
</html>
