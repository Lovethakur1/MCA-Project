<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - MCA CMS</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body class="bg-gray-50">
    
    <!-- Include Sidebar -->
    <%- include('partials/sidebar') %>

    <!-- Main Content -->
    <div class="lg:ml-64">
        <!-- Header -->
        <header class="bg-white shadow-sm border-b border-gray-200">
            <div class="flex items-center justify-between px-6 py-4">
                <div class="flex items-center">
                    <button class="lg:hidden text-gray-600 hover:text-gray-900 mr-4" id="sidebar-toggle">
                        <i class="fas fa-bars text-xl"></i>
                    </button>
                    <h1 class="text-2xl font-bold text-gray-900"><%= title %></h1>
                </div>
                
                <!-- User Menu -->
                <div class="flex items-center space-x-4">
                    <a href="/admin/pricing" class="bg-gray-600 text-white px-4 py-2 rounded-md hover:bg-gray-700">
                        <i class="fas fa-arrow-left mr-2"></i>Back to Pricing
                    </a>
                    <div class="relative">
                        <button class="flex items-center text-gray-700 hover:text-gray-900" id="user-menu-button">
                            <i class="fas fa-user-circle text-2xl mr-2"></i>
                            <span>Admin</span>
                            <i class="fas fa-chevron-down ml-2"></i>
                        </button>
                    </div>
                </div>
            </div>
        </header>

        <!-- Content -->
        <main class="p-6">
            <div class="max-w-4xl mx-auto">
                <div class="bg-white rounded-lg shadow">
                    <div class="px-6 py-4 border-b border-gray-200">
                        <h2 class="text-lg font-semibold text-gray-900"><%= title %></h2>
                    </div>
                    
                    <form action="<%= action %>" method="POST" class="p-6">
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <!-- Category -->
                            <div>
                                <label for="category" class="block text-sm font-medium text-gray-700 mb-2">Category *</label>
                                <select id="category" 
                                        name="category" 
                                        required 
                                        class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent">
                                    <option value="">Select a category</option>
                                    <option value="personal-training" <%= (plan && plan.category === 'personal-training') ? 'selected' : '' %>>
                                        Personal Training
                                    </option>
                                    <option value="partner-personal-training" <%= (plan && plan.category === 'partner-personal-training') ? 'selected' : '' %>>
                                        Partner Personal Training
                                    </option>
                                    <option value="senior-personal-training" <%= (plan && plan.category === 'senior-personal-training') ? 'selected' : '' %>>
                                        Senior Personal Training
                                    </option>
                                    <option value="domizil-personal-training" <%= (plan && plan.category === 'domizil-personal-training') ? 'selected' : '' %>>
                                        Domizil Personal Training
                                    </option>
                                    <option value="gesundheits-coaching" <%= (plan && plan.category === 'gesundheits-coaching') ? 'selected' : '' %>>
                                        Gesundheits-Coaching
                                    </option>
                                </select>
                            </div>

                            <!-- Plan Title -->
                            <div>
                                <label for="title" class="block text-sm font-medium text-gray-700 mb-2">Plan Title *</label>
                                <input type="text" 
                                       id="title" 
                                       name="title" 
                                       value="<%= plan ? plan.title : '' %>"
                                       required 
                                       placeholder="e.g., Einzelsession, 10er Abo"
                                       class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent">
                            </div>

                            <!-- Duration -->
                            <div>
                                <label for="duration" class="block text-sm font-medium text-gray-700 mb-2">Duration *</label>
                                <input type="text" 
                                       id="duration" 
                                       name="duration" 
                                       value="<%= plan ? plan.duration : '' %>"
                                       required 
                                       placeholder="e.g., 60 min, 90 min"
                                       class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent">
                            </div>

                            <!-- Price -->
                            <div>
                                <label for="price" class="block text-sm font-medium text-gray-700 mb-2">Price *</label>
                                <input type="text" 
                                       id="price" 
                                       name="price" 
                                       value="<%= plan ? plan.price : '' %>"
                                       required 
                                       placeholder="e.g., CHF 150.-, CHF 1500.-"
                                       class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent">
                            </div>

                            <!-- Location -->
                            <div>
                                <label for="location" class="block text-sm font-medium text-gray-700 mb-2">Location *</label>
                                <input type="text" 
                                       id="location" 
                                       name="location" 
                                       value="<%= plan ? plan.location : '' %>"
                                       required 
                                       placeholder="e.g., Private Studio, Online/Studio"
                                       class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent">
                            </div>

                            <!-- Icon -->
                            <div>
                                <label for="icon" class="block text-sm font-medium text-gray-700 mb-2">Icon (Font Awesome class)</label>
                                <input type="text" 
                                       id="icon" 
                                       name="icon" 
                                       value="<%= plan ? plan.icon : 'fas fa-clock' %>"
                                       placeholder="e.g., fas fa-clock, fas fa-user, fas fa-dumbbell"
                                       class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent">
                                <p class="text-xs text-gray-500 mt-1">Visit fontawesome.com for icon classes</p>
                            </div>

                            <!-- Sort Order -->
                            <div>
                                <label for="sortOrder" class="block text-sm font-medium text-gray-700 mb-2">Sort Order</label>
                                <input type="number" 
                                       id="sortOrder" 
                                       name="sortOrder" 
                                       value="<%= plan ? plan.sortOrder : 0 %>"
                                       min="0"
                                       placeholder="0"
                                       class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent">
                                <p class="text-xs text-gray-500 mt-1">Lower numbers appear first</p>
                            </div>

                            <!-- Button Text -->
                            <div>
                                <label for="buttonText" class="block text-sm font-medium text-gray-700 mb-2">Button Text</label>
                                <input type="text" 
                                       id="buttonText" 
                                       name="buttonText" 
                                       value="<%= plan ? plan.buttonText : 'Book Now' %>"
                                       placeholder="Book Now"
                                       class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent">
                            </div>

                            <!-- Button Link -->
                            <div>
                                <label for="buttonLink" class="block text-sm font-medium text-gray-700 mb-2">Button Link</label>
                                <input type="text" 
                                       id="buttonLink" 
                                       name="buttonLink" 
                                       value="<%= plan ? plan.buttonLink : '#' %>"
                                       placeholder="#"
                                       class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent">
                            </div>
                        </div>

                        <!-- Description -->
                        <div class="mt-6">
                            <label for="description" class="block text-sm font-medium text-gray-700 mb-2">Description *</label>
                            <textarea id="description" 
                                      name="description" 
                                      rows="3" 
                                      required 
                                      placeholder="Brief description of this pricing plan..."
                                      class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent"><%= plan ? plan.description : '' %></textarea>
                        </div>

                        <!-- Features -->
                        <div class="mt-6">
                            <label for="features" class="block text-sm font-medium text-gray-700 mb-2">Features (optional)</label>
                            <textarea id="features" 
                                      name="features" 
                                      rows="4" 
                                      placeholder="Enter each feature on a new line..."
                                      class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent"><%= plan && plan.features ? plan.features.join('\n') : '' %></textarea>
                            <p class="text-xs text-gray-500 mt-1">Each line will be a separate feature bullet point</p>
                        </div>

                        <!-- Status Options -->
                        <div class="mt-6">
                            <h3 class="text-sm font-medium text-gray-700 mb-3">Status Options</h3>
                            <div class="space-y-3">
                                <div class="flex items-center">
                                    <input type="checkbox" 
                                           id="published" 
                                           name="published" 
                                           <%= (!plan || plan.published) ? 'checked' : '' %>
                                           class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded">
                                    <label for="published" class="ml-2 block text-sm text-gray-900">
                                        Published
                                        <span class="text-gray-500">(visible on website)</span>
                                    </label>
                                </div>
                                
                                <div class="flex items-center">
                                    <input type="checkbox" 
                                           id="popular" 
                                           name="popular" 
                                           <%= (plan && plan.popular) ? 'checked' : '' %>
                                           class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded">
                                    <label for="popular" class="ml-2 block text-sm text-gray-900">
                                        Popular Plan
                                        <span class="text-gray-500">(highlighted on website)</span>
                                    </label>
                                </div>
                            </div>
                        </div>

                        <!-- Preview Section -->
                        <div class="mt-6 p-4 bg-gray-50 rounded-lg">
                            <h3 class="text-sm font-medium text-gray-700 mb-3">Live Preview</h3>
                            <div id="preview-card" class="border border-gray-200 rounded-lg p-4 bg-white max-w-sm">
                                <div class="flex items-center mb-3">
                                    <i id="preview-icon" class="fas fa-clock text-indigo-600 mr-2"></i>
                                    <span id="preview-duration" class="text-sm text-gray-600">60 min</span>
                                </div>
                                <h3 id="preview-title" class="text-lg font-semibold text-gray-900 mb-2">Plan Title</h3>
                                <p id="preview-description" class="text-sm text-gray-600 mb-3">Plan description</p>
                                <div id="preview-price" class="text-2xl font-bold text-gray-900 mb-2">CHF 150.-</div>
                                <p id="preview-location" class="text-sm text-gray-500 mb-4">
                                    <i class="fas fa-map-marker-alt mr-1"></i>
                                    Location
                                </p>
                                <button id="preview-button" class="w-full bg-indigo-600 text-white py-2 px-4 rounded-md hover:bg-indigo-700">
                                    Book Now
                                </button>
                            </div>
                        </div>

                        <!-- Submit Buttons -->
                        <div class="mt-8 flex justify-end space-x-4">
                            <a href="/admin/pricing" class="px-4 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50">
                                Cancel
                            </a>
                            <button type="submit" class="px-6 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700">
                                <%= plan ? 'Update Plan' : 'Create Plan' %>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </main>
    </div>

    <!-- Include Sidebar JavaScript -->
    <%- include('partials/sidebar-script') %>

    <script>
        // Live preview functionality
        document.addEventListener('DOMContentLoaded', function() {
            const fields = {
                title: document.getElementById('title'),
                description: document.getElementById('description'),
                duration: document.getElementById('duration'),
                price: document.getElementById('price'),
                location: document.getElementById('location'),
                icon: document.getElementById('icon'),
                buttonText: document.getElementById('buttonText')
            };

            const previewElements = {
                title: document.getElementById('preview-title'),
                description: document.getElementById('preview-description'),
                duration: document.getElementById('preview-duration'),
                price: document.getElementById('preview-price'),
                location: document.getElementById('preview-location'),
                icon: document.getElementById('preview-icon'),
                button: document.getElementById('preview-button')
            };

            function updatePreview() {
                previewElements.title.textContent = fields.title.value || 'Plan Title';
                previewElements.description.textContent = fields.description.value || 'Plan description';
                previewElements.duration.textContent = fields.duration.value || '60 min';
                previewElements.price.textContent = fields.price.value || 'CHF 150.-';
                previewElements.location.innerHTML = `<i class="fas fa-map-marker-alt mr-1"></i>${fields.location.value || 'Location'}`;
                previewElements.button.textContent = fields.buttonText.value || 'Book Now';
                
                // Update icon
                const iconClass = fields.icon.value || 'fas fa-clock';
                previewElements.icon.className = iconClass + ' text-indigo-600 mr-2';
            }

            // Add event listeners
            Object.values(fields).forEach(field => {
                field.addEventListener('input', updatePreview);
            });

            // Initial preview update
            updatePreview();
        });
    </script>
</body>
</html>
