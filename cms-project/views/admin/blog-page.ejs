<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Admin</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="bg-gray-100">
    <!-- Sidebar -->
    <%- include('./partials/sidebar') %>
    
    <!-- Main Content -->
    <div class="ml-64 flex-1">
        <!-- Header -->
        <header class="bg-white shadow-sm border-b border-gray-200">
            <div class="flex justify-between items-center px-6 py-4">
                <div>
                    <h1 class="text-2xl font-bold text-gray-900"><%= title %></h1>
                    <p class="text-gray-600 mt-1">Manage your blog page content and sections</p>
                </div>
                <div class="flex items-center space-x-4">
                    <button class="p-2 rounded-lg hover:bg-gray-100 transition duration-200">
                        <i class="fas fa-bell text-gray-600"></i>
                    </button>
                    <div class="relative">
                        <button id="userMenuBtn" class="flex items-center space-x-2 p-2 rounded-lg hover:bg-gray-100 transition duration-200">
                            <div class="w-8 h-8 bg-indigo-600 rounded-full flex items-center justify-center">
                                <i class="fas fa-user text-white text-sm"></i>
                            </div>
                            <span class="text-gray-700 font-medium">Admin</span>
                            <i class="fas fa-chevron-down text-gray-400 text-sm"></i>
                        </button>
                    </div>
                </div>
            </div>
        </header>

        <!-- Content -->
        <main class="p-6">
            <!-- Success/Error Messages -->
            <% if (success) { %>
                <div class="mb-6 bg-green-50 border border-green-200 rounded-lg p-4">
                    <div class="flex">
                        <i class="fas fa-check-circle text-green-400 mt-0.5 mr-3"></i>
                        <div class="text-green-800"><%= success %></div>
                    </div>
                </div>
            <% } %>

            <% if (error) { %>
                <div class="mb-6 bg-red-50 border border-red-200 rounded-lg p-4">
                    <div class="flex">
                        <i class="fas fa-exclamation-circle text-red-400 mt-0.5 mr-3"></i>
                        <div class="text-red-800"><%= error %></div>
                    </div>
                </div>
            <% } %>

            <!-- Quick Actions -->
            <div class="mb-6">
                <div class="flex space-x-4">
                    <a href="/blog" target="_blank" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition duration-200">
                        <i class="fas fa-external-link-alt mr-2"></i>
                        View Blog Page
                    </a>
                    <a href="/admin/blog-faq-manager" class="bg-purple-600 text-white px-4 py-2 rounded-lg hover:bg-purple-700 transition duration-200">
                        <i class="fas fa-question-circle mr-2"></i>
                        Manage Blog FAQs
                    </a>
                </div>
            </div>

            <!-- Blog Page Content Form -->
            <form method="POST" action="/admin/blog-page/update" enctype="multipart/form-data" class="space-y-8">
                
                <!-- Hero Section -->
                <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
                    <h2 class="text-xl font-semibold text-gray-900 mb-4 flex items-center">
                        <i class="fas fa-image mr-3 text-blue-600"></i>
                        Hero Section
                    </h2>
                    
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <label for="hero_title" class="block text-sm font-medium text-gray-700 mb-2">Title</label>
                            <input type="text" 
                                   id="hero_title" 
                                   name="hero_title" 
                                   value="<%= content.hero ? content.hero.title || '' : '' %>"
                                   class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                                   placeholder="Enter hero title">
                        </div>
                        
                        <div>
                            <label for="hero_subtitle" class="block text-sm font-medium text-gray-700 mb-2">Subtitle</label>
                            <input type="text" 
                                   id="hero_subtitle" 
                                   name="hero_subtitle" 
                                   value="<%= content.hero ? content.hero.subtitle || '' : '' %>"
                                   class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                                   placeholder="Enter hero subtitle">
                        </div>
                    </div>

                    <div class="mt-4">
                        <label for="hero_image" class="block text-sm font-medium text-gray-700 mb-2">Hero Image</label>
                        <input type="file" 
                               id="hero_image" 
                               name="hero_image" 
                               accept="image/*"
                               class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                        <% if (content.hero && content.hero.image) { %>
                            <div class="mt-2">
                                <p class="text-sm text-gray-600">Current image:</p>
                                <img src="<%= content.hero.image %>" alt="Hero Image" class="mt-1 h-20 w-32 object-cover rounded-lg border">
                            </div>
                        <% } %>
                    </div>
                </div>

                <!-- Healthy Salts Section -->
                <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
                    <h2 class="text-xl font-semibold text-gray-900 mb-4 flex items-center">
                        <i class="fas fa-leaf mr-3 text-green-600"></i>
                        Healthy Salts Section
                    </h2>
                    
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <label for="healthy_salts_title" class="block text-sm font-medium text-gray-700 mb-2">Title</label>
                            <input type="text" 
                                   id="healthy_salts_title" 
                                   name="healthy_salts_title" 
                                   value="<%= content.healthy_salts ? content.healthy_salts.title || '' : '' %>"
                                   class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                                   placeholder="Enter healthy salts title">
                        </div>
                        
                        <div>
                            <label for="healthy_salts_subtitle" class="block text-sm font-medium text-gray-700 mb-2">Subtitle</label>
                            <input type="text" 
                                   id="healthy_salts_subtitle" 
                                   name="healthy_salts_subtitle" 
                                   value="<%= content.healthy_salts ? content.healthy_salts.subtitle || '' : '' %>"
                                   class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                                   placeholder="Enter healthy salts subtitle">
                        </div>
                    </div>

                    <div class="mt-4">
                        <label for="healthy_salts_image" class="block text-sm font-medium text-gray-700 mb-2">Section Image</label>
                        <input type="file" 
                               id="healthy_salts_image" 
                               name="healthy_salts_image" 
                               accept="image/*"
                               class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                        <% if (content.healthy_salts && content.healthy_salts.image) { %>
                            <div class="mt-2">
                                <p class="text-sm text-gray-600">Current image:</p>
                                <img src="<%= content.healthy_salts.image %>" alt="Healthy Salts Image" class="mt-1 h-20 w-32 object-cover rounded-lg border">
                            </div>
                        <% } %>
                    </div>
                </div>

                <!-- Golden Rules Section -->
                <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
                    <h2 class="text-xl font-semibold text-gray-900 mb-4 flex items-center">
                        <i class="fas fa-crown mr-3 text-yellow-600"></i>
                        Golden Rules Section
                    </h2>
                    
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <label for="golden_rules_title" class="block text-sm font-medium text-gray-700 mb-2">Title</label>
                            <input type="text" 
                                   id="golden_rules_title" 
                                   name="golden_rules_title" 
                                   value="<%= content.golden_rules ? content.golden_rules.title || '' : '' %>"
                                   class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                                   placeholder="Enter golden rules title">
                        </div>
                        
                        <div>
                            <label for="golden_rules_subtitle" class="block text-sm font-medium text-gray-700 mb-2">Subtitle</label>
                            <input type="text" 
                                   id="golden_rules_subtitle" 
                                   name="golden_rules_subtitle" 
                                   value="<%= content.golden_rules ? content.golden_rules.subtitle || '' : '' %>"
                                   class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                                   placeholder="Enter golden rules subtitle">
                        </div>
                    </div>

                    <div class="mt-4">
                        <label for="golden_rules_image" class="block text-sm font-medium text-gray-700 mb-2">Section Image</label>
                        <input type="file" 
                               id="golden_rules_image" 
                               name="golden_rules_image" 
                               accept="image/*"
                               class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                        <% if (content.golden_rules && content.golden_rules.image) { %>
                            <div class="mt-2">
                                <p class="text-sm text-gray-600">Current image:</p>
                                <img src="<%= content.golden_rules.image %>" alt="Golden Rules Image" class="mt-1 h-20 w-32 object-cover rounded-lg border">
                            </div>
                        <% } %>
                    </div>
                </div>

                <!-- Blog Posts Overview -->
                <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
                    <h2 class="text-xl font-semibold text-gray-900 mb-4 flex items-center">
                        <i class="fas fa-blog mr-3 text-indigo-600"></i>
                        Blog Posts Section
                        <span class="ml-2 text-sm text-gray-500">(Auto-populated from database)</span>
                    </h2>
                    
                    <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
                        <div class="flex">
                            <i class="fas fa-info-circle text-blue-400 mt-0.5 mr-3"></i>
                            <div>
                                <p class="text-blue-800 font-medium">Total Blog Posts: <%= blogPosts ? blogPosts.length : 0 %></p>
                                <p class="text-blue-600 text-sm mt-1">This section automatically displays all published blog posts from your database. Use the Coach Page Blog Manager to add or edit blog posts.</p>
                                <div class="mt-2">
                                    <a href="/admin/blog-manager" class="text-blue-600 hover:text-blue-800 font-medium">
                                        <i class="fas fa-external-link-alt mr-1"></i>
                                        Manage Blog Posts
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- FAQ Section Overview -->
                <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
                    <h2 class="text-xl font-semibold text-gray-900 mb-4 flex items-center">
                        <i class="fas fa-question-circle mr-3 text-purple-600"></i>
                        FAQ Section
                        <span class="ml-2 text-sm text-gray-500">(Managed separately)</span>
                    </h2>
                    
                    <div class="bg-purple-50 border border-purple-200 rounded-lg p-4">
                        <div class="flex">
                            <i class="fas fa-info-circle text-purple-400 mt-0.5 mr-3"></i>
                            <div>
                                <p class="text-purple-800 font-medium">Total Blog FAQs: <%= faqs ? faqs.length : 0 %></p>
                                <p class="text-purple-600 text-sm mt-1">Manage frequently asked questions specific to your blog page.</p>
                                <div class="mt-2">
                                    <a href="/admin/blog-faq-manager" class="text-purple-600 hover:text-purple-800 font-medium">
                                        <i class="fas fa-external-link-alt mr-1"></i>
                                        Manage Blog FAQs
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Submit Button -->
                <div class="flex justify-end">
                    <button type="submit" class="bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 transition duration-200">
                        <i class="fas fa-save mr-2"></i>
                        Save Blog Page Content
                    </button>
                </div>
            </form>
        </main>
    </div>

    <!-- JavaScript -->
    <script>
        // Sidebar toggle functionality
        document.getElementById('sidebarToggle')?.addEventListener('click', function() {
            document.getElementById('sidebar').classList.toggle('-translate-x-full');
        });

        // User menu toggle
        document.getElementById('userMenuBtn')?.addEventListener('click', function() {
            // Add user menu functionality here
        });

        // File upload preview
        function setupImagePreview(inputId) {
            const input = document.getElementById(inputId);
            if (input) {
                input.addEventListener('change', function(e) {
                    const file = e.target.files[0];
                    if (file) {
                        console.log(`Selected file for ${inputId}:`, file.name);
                    }
                });
            }
        }

        // Setup image preview for all file inputs
        setupImagePreview('hero_image');
        setupImagePreview('healthy_salts_image');
        setupImagePreview('golden_rules_image');
    </script>
</body>
</html>
