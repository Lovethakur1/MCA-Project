    <!-- JavaScript -->
    <script>
        // Dashboard data and charts
        let activityChart = null;
        let distributionChart = null;

        // Initialize dashboard
        document.addEventListener('DOMContentLoaded', function() {
            initializeCharts();
            startLiveUpdates();
            updateLastUpdateTime();
        });

        // Initialize charts
        function initializeCharts() {
            // Activity Chart (Line Chart)
            const activityCtx = document.getElementById('activityChart').getContext('2d');
            const activityData = {
                labels: ['Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat', 'Sun'],
                datasets: [{
                    label: 'Blog Posts',
                    data: [2, 1, 4, 2, 3, 1, 2],
                    borderColor: '#3B82F6',
                    backgroundColor: 'rgba(59, 130, 246, 0.1)',
                    tension: 0.4,
                    fill: true
                }, {
                    label: 'Testimonials',
                    data: [1, 2, 1, 3, 1, 2, 1],
                    borderColor: '#F59E0B',
                    backgroundColor: 'rgba(245, 158, 11, 0.1)',
                    tension: 0.4,
                    fill: true
                }]
            };

            activityChart = new Chart(activityCtx, {
                type: 'line',
                data: activityData,
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    interaction: {
                        intersect: false,
                        mode: 'index'
                    },
                    plugins: {
                        legend: {
                            position: 'top',
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            grid: {
                                color: 'rgba(0, 0, 0, 0.05)'
                            }
                        },
                        x: {
                            grid: {
                                color: 'rgba(0, 0, 0, 0.05)'
                            }
                        }
                    }
                }
            });

            // Distribution Chart (Doughnut Chart)
            const distributionCtx = document.getElementById('distributionChart').getContext('2d');
            const distributionData = {
                labels: ['Blog Posts', 'Testimonials', 'Pages', 'Content Items'],
                datasets: [{
                    data: [
                        parseInt('<%= stats.blogPosts || 0 %>'),
                        parseInt('<%= stats.testimonials || 0 %>'),
                        5, // Pages count
                        parseInt('<%= stats.contentItems || 0 %>')
                    ],
                    backgroundColor: [
                        '#3B82F6',
                        '#F59E0B',
                        '#10B981',
                        '#8B5CF6'
                    ],
                    borderWidth: 0,
                    borderRadius: 4
                }]
            };

            distributionChart = new Chart(distributionCtx, {
                type: 'doughnut',
                data: distributionData,
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'bottom',
                            labels: {
                                padding: 20,
                                usePointStyle: true
                            }
                        }
                    },
                    cutout: '70%'
                }
            });
        }

        // Live data updates
        function startLiveUpdates() {
            // Update stats every 30 seconds
            setInterval(updateDashboardStats, 30000);
            
            // Update time every minute
            setInterval(updateLastUpdateTime, 60000);
        }

        // Update dashboard statistics
        async function updateDashboardStats() {
            try {
                const response = await fetch('/admin/api/stats');
                if (response.ok) {
                    const stats = await response.json();
                    
                    // Update stat cards with animation
                    updateStatCard('blogCount', stats.blogPosts || 0);
                    updateStatCard('testimonialCount', stats.testimonials || 0);
                    updateStatCard('contactCount', stats.contacts || 0);
                    updateStatCard('contentCount', stats.contentItems || 0);
                    updateStatCard('newContactCount', stats.newContacts || 0);
                    
                    // Update badge
                    const badge = document.getElementById('newContactBadge');
                    if (badge) {
                        badge.textContent = `${stats.newContacts || 0} New`;
                        if (stats.newContacts > 0) {
                            badge.classList.add('animate-pulse');
                        } else {
                            badge.classList.remove('animate-pulse');
                        }
                    }

                    // Update charts if data changed
                    if (distributionChart) {
                        distributionChart.data.datasets[0].data = [
                            stats.blogPosts || 0,
                            stats.testimonials || 0,
                            5, // Pages count
                            stats.contentItems || 0
                        ];
                        distributionChart.update('none');
                    }
                }
            } catch (error) {
                console.log('Stats update error:', error);
            }
        }

        // Update individual stat card with animation
        function updateStatCard(elementId, newValue) {
            const element = document.getElementById(elementId);
            if (element) {
                const currentValue = parseInt(element.textContent);
                if (currentValue !== newValue) {
                    element.style.transform = 'scale(1.1)';
                    element.style.transition = 'transform 0.2s';
                    setTimeout(() => {
                        element.textContent = newValue;
                        element.style.transform = 'scale(1)';
                    }, 100);
                }
            }
        }

        // Update last update time
        function updateLastUpdateTime() {
            const element = document.getElementById('lastUpdate');
            if (element) {
                element.textContent = new Date().toLocaleString();
            }
        }

        // Refresh charts manually
        function refreshCharts() {
            if (activityChart) {
                // Simulate new data
                const newData = activityChart.data.datasets[0].data.map(() => 
                    Math.floor(Math.random() * 5) + 1
                );
                activityChart.data.datasets[0].data = newData;
                
                const newTestimonialData = activityChart.data.datasets[1].data.map(() => 
                    Math.floor(Math.random() * 3) + 1
                );
                activityChart.data.datasets[1].data = newTestimonialData;
                
                activityChart.update('active');
            }
            
            updateDashboardStats();
        }

        // Sidebar functionality
        function openSidebar() {
            document.getElementById('sidebar').classList.remove('-translate-x-full');
            document.getElementById('sidebarOverlay').classList.remove('hidden');
        }

        function closeSidebar() {
            document.getElementById('sidebar').classList.add('-translate-x-full');
            document.getElementById('sidebarOverlay').classList.add('hidden');
        }

        // User menu toggle
        function toggleUserMenu() {
            const menu = document.getElementById('userMenu');
            menu.classList.toggle('hidden');
        }

        // Close user menu when clicking outside
        document.addEventListener('click', function(event) {
            const userMenuButton = event.target.closest('[onclick="toggleUserMenu()"]');
            const userMenu = document.getElementById('userMenu');
            
            if (!userMenuButton && !userMenu.contains(event.target)) {
                userMenu.classList.add('hidden');
            }
        });

        // Section management
        function showSection(sectionName) {
            // Hide all sections
            const sections = document.querySelectorAll('.content-section');
            sections.forEach(section => {
                section.classList.add('hidden');
            });

            // Show target section
            const targetSection = document.getElementById(sectionName + '-section');
            if (targetSection) {
                targetSection.classList.remove('hidden');
            }

            // Update sidebar active state
            const sidebarLinks = document.querySelectorAll('nav a');
            sidebarLinks.forEach(link => {
                link.classList.remove('bg-indigo-50', 'border-r-4', 'border-indigo-600', 'text-indigo-600');
                link.classList.add('text-gray-600');
            });

            // Set active link
            const activeLink = document.querySelector(`[onclick="showSection('${sectionName}')"]`);
            if (activeLink) {
                activeLink.classList.remove('text-gray-600');
                activeLink.classList.add('bg-indigo-50', 'border-r-4', 'border-indigo-600', 'text-indigo-600');
            }

            // Close mobile sidebar
            closeSidebar();
        }

        // Auto-hide messages
        setTimeout(() => {
            const messages = document.querySelectorAll('.bg-green-50, .bg-red-50');
            messages.forEach(message => {
                message.style.opacity = '0';
                setTimeout(() => {
                    message.remove();
                }, 300);
            });
        }, 5000);

        // Add click animations to dashboard cards
        document.querySelectorAll('.dashboard-card').forEach(card => {
            card.addEventListener('click', function() {
                this.style.transform = 'scale(0.98)';
                setTimeout(() => {
                    this.style.transform = '';
                }, 150);
            });
        });

        // Keyboard shortcuts
        document.addEventListener('keydown', function(event) {
            // Ctrl/Cmd + R to refresh charts
            if ((event.ctrlKey || event.metaKey) && event.key === 'r') {
                event.preventDefault();
                refreshCharts();
            }
            
            // Ctrl/Cmd + N to create new blog post
            if ((event.ctrlKey || event.metaKey) && event.key === 'n') {
                event.preventDefault();
                window.location.href = '/admin/blog/new';
            }
        });
    </script>

