                            <div>
                                <label for="contactPhone" class="block text-sm font-medium text-gray-700">Phone</label>
                                <input type="text" id="contactPhone" name="contact[contactInfo][phone]" value="<%= page && page.contact && page.contact.contactInfo ? page.contact.contactInfo.phone : '' %>" 
                                       class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500">
                            </div>
                            
                            <div>
                                <label for="contactEmail" class="block text-sm font-medium text-gray-700">Email</label>
                                <input type="email" id="contactEmail" name="contact[contactInfo][email]" value="<%= page && page.contact && page.contact.contactInfo ? page.contact.contactInfo.email : '' %>" 
                                       class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500">
                            </div>
                            
                            <div>
                                <label for="contactHours" class="block text-sm font-medium text-gray-700">Business Hours</label>
                                <input type="text" id="contactHours" name="contact[contactInfo][hours]" value="<%= page && page.contact && page.contact.contactInfo ? page.contact.contactInfo.hours : '' %>" 
                                       class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500">
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Newsletter Section -->
            <div class="bg-white shadow overflow-hidden sm:rounded-lg">
                <div class="px-4 py-5 sm:p-6">
                    <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">Newsletter Section</h3>
                    
                    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
                        <div>
                            <label for="newsletterTitle" class="block text-sm font-medium text-gray-700">Newsletter Title</label>
                            <input type="text" id="newsletterTitle" name="newsletter[title]" value="<%= page && page.newsletter ? page.newsletter.title : '' %>" 
                                   class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500">
                        </div>
                        
                        <div class="flex items-center">
                            <input type="checkbox" id="showNewsletter" name="newsletter[showNewsletter]" value="true" 
                                   <%= page && page.newsletter && page.newsletter.showNewsletter ? 'checked' : 'checked' %> 
                                   class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded">
                            <label for="showNewsletter" class="ml-2 block text-sm text-gray-900">Show Newsletter Signup</label>
                        </div>
                        
                        <div class="sm:col-span-2">
                            <label for="newsletterDescription" class="block text-sm font-medium text-gray-700">Newsletter Description</label>
                            <textarea id="newsletterDescription" name="newsletter[description]" rows="2" 
                                      class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500"><%= page && page.newsletter ? page.newsletter.description : '' %></textarea>
                        </div>
                        
                        <div>
                            <label for="newsletterButtonText" class="block text-sm font-medium text-gray-700">Button Text</label>
                            <input type="text" id="newsletterButtonText" name="newsletter[buttonText]" value="<%= page && page.newsletter ? page.newsletter.buttonText : '' %>" 
                                   placeholder="Subscribe Now" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500">
                        </div>
                        
                        <div>
                            <label for="newsletterPlaceholder" class="block text-sm font-medium text-gray-700">Email Placeholder</label>
                            <input type="text" id="newsletterPlaceholder" name="newsletter[placeholder]" value="<%= page && page.newsletter ? page.newsletter.placeholder : '' %>" 
                                   placeholder="Enter your email" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500">
                        </div>
                    </div>
                </div>
            </div>

            <!-- Submit Buttons -->
            <div class="flex justify-end space-x-4">
                <a href="/admin/pages" class="bg-gray-300 text-gray-700 px-6 py-2 rounded-lg hover:bg-gray-400 transition duration-200">
                    Cancel
                </a>
                <button type="submit" class="bg-indigo-600 text-white px-6 py-2 rounded-lg hover:bg-indigo-700 transition duration-200">
                    <i class="fas fa-save mr-2"></i><%= isEdit ? 'Update Page' : 'Create Page' %>
                </button>
            </div>
        </form>
    </div>

    <script>
        let serviceCount = 0;
        let conceptFeatureCount = 0;
        let teamMemberCount = 0;
        let benefitCount = 0;
        let faqCount = 0;

        // File Upload Handlers
        function handleVideoUpload(input, previewId) {
            const file = input.files[0];
            if (file) {
                const preview = document.getElementById(previewId);
                const video = preview.querySelector('video');
                
                const reader = new FileReader();
                reader.onload = function(e) {
                    video.src = e.target.result;
                    preview.classList.remove('hidden');
                };
                reader.readAsDataURL(file);
            }
        }

        function handleImageUpload(input, previewId) {
            const file = input.files[0];
            if (file) {
                const preview = document.getElementById(previewId);
                const img = preview.querySelector('img');
                
                const reader = new FileReader();
                reader.onload = function(e) {
                    img.src = e.target.result;
                    preview.classList.remove('hidden');
                };
                reader.readAsDataURL(file);
            }
        }

        function handleIconUpload(input, previewId) {
            const file = input.files[0];
            if (file) {
                const preview = document.getElementById(previewId);
                const img = preview.querySelector('img');
                
                const reader = new FileReader();
                reader.onload = function(e) {
                    img.src = e.target.result;
                    preview.classList.remove('hidden');
                };
                reader.readAsDataURL(file);
            }
        }

        // Add Service
        function addService() {
            serviceCount++;
            const servicesList = document.getElementById('servicesList');
            const serviceHTML = `
                <div class="bg-gray-50 rounded-lg p-6 border border-gray-200 service-item">
                    <div class="flex justify-between items-center mb-4">
                        <h4 class="text-md font-medium text-gray-900">Service ${serviceCount}</h4>
                        <button type="button" onclick="removeService(this)" class="text-red-600 hover:text-red-800">
                            <i class="fas fa-trash"></i>
                        </button>
                    </div>
                    
                    <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
                        <div>
                            <label class="block text-sm font-medium text-gray-700">Service Title</label>
                            <input type="text" name="services[items][${serviceCount}][title]" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500">
                        </div>
                        
                        <div>
                            <label class="block text-sm font-medium text-gray-700">Price</label>
                            <input type="text" name="services[items][${serviceCount}][price]" placeholder="CHF 150.– per hour" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500">
                        </div>
                        
                        <div class="sm:col-span-2">
                            <label class="block text-sm font-medium text-gray-700">Description</label>
                            <textarea name="services[items][${serviceCount}][description]" rows="3" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500"></textarea>
                        </div>
                        
                        <div>
                            <label class="block text-sm font-medium text-gray-700">Link URL</label>
                            <input type="text" name="services[items][${serviceCount}][link]" placeholder="/services/details" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500">
                        </div>
                        
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">Service Icon</label>
                            <div class="border-2 border-dashed border-gray-300 rounded-lg p-4 text-center hover:border-indigo-400 transition duration-200">
                                <i class="fas fa-upload text-2xl text-gray-400 mb-2"></i>
                                <p class="text-sm text-gray-600 mb-2">Upload Icon</p>
                                <input type="file" id="serviceIcon${serviceCount}" name="services[items][${serviceCount}][iconFile]" accept="image/*" class="hidden" onchange="handleIconUpload(this, 'serviceIconPreview${serviceCount}')">
                                <button type="button" onclick="document.getElementById('serviceIcon${serviceCount}').click()" class="bg-indigo-600 text-white px-3 py-1 rounded text-sm hover:bg-indigo-700 transition duration-200">
                                    Choose Icon
                                </button>
                            </div>
                            <div id="serviceIconPreview${serviceCount}" class="mt-2 hidden">
                                <img class="w-16 h-16 object-contain mx-auto" src="" alt="Icon Preview">
                            </div>
                        </div>
                    </div>
                </div>
            `;
            servicesList.insertAdjacentHTML('beforeend', serviceHTML);
        }

        function removeService(button) {
            if (confirm('Remove this service?')) {
                button.closest('.service-item').remove();
            }
        }

        // Add Concept Feature
        function addConceptFeature() {
            conceptFeatureCount++;
            const featuresList = document.getElementById('conceptFeaturesList');
            const featureHTML = `
                <div class="bg-gray-50 rounded-lg p-4 border border-gray-200 feature-item">
                    <div class="flex justify-between items-center mb-3">
                        <h5 class="text-sm font-medium text-gray-900">Feature ${conceptFeatureCount}</h5>
                        <button type="button" onclick="removeConceptFeature(this)" class="text-red-600 hover:text-red-800">
                            <i class="fas fa-trash text-sm"></i>
                        </button>
                    </div>
                    
                    <div class="grid grid-cols-1 gap-3 sm:grid-cols-2">
                        <div>
                            <label class="block text-sm font-medium text-gray-700">Feature Title</label>
                            <input type="text" name="concept[features][${conceptFeatureCount}][title]" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500">
                        </div>
                        
                        <div>
                            <label class="block text-sm font-medium text-gray-700">Feature Icon</label>
                            <div class="border border-gray-300 rounded p-2 text-center">
                                <input type="file" id="conceptFeatureIcon${conceptFeatureCount}" name="concept[features][${conceptFeatureCount}][iconFile]" accept="image/*" class="hidden" onchange="handleIconUpload(this, 'conceptFeatureIconPreview${conceptFeatureCount}')">
                                <button type="button" onclick="document.getElementById('conceptFeatureIcon${conceptFeatureCount}').click()" class="text-sm text-indigo-600 hover:text-indigo-800">
                                    <i class="fas fa-upload mr-1"></i>Upload Icon
                                </button>
                                <div id="conceptFeatureIconPreview${conceptFeatureCount}" class="mt-2 hidden">
                                    <img class="w-8 h-8 object-contain mx-auto" src="" alt="Icon Preview">
                                </div>
                            </div>
                        </div>
                        
                        <div class="sm:col-span-2">
                            <label class="block text-sm font-medium text-gray-700">Description</label>
                            <textarea name="concept[features][${conceptFeatureCount}][description]" rows="2" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500"></textarea>
                        </div>
                    </div>
                </div>
            `;
            featuresList.insertAdjacentHTML('beforeend', featureHTML);
        }

        function removeConceptFeature(button) {
            button.closest('.feature-item').remove();
        }

        // Add Team Member
        function addTeamMember() {
            teamMemberCount++;
            const teamMembersList = document.getElementById('teamMembersList');
            const memberHTML = `
                <div class="bg-gray-50 rounded-lg p-6 border border-gray-200 team-member-item">
                    <div class="flex justify-between items-center mb-4">
                        <h4 class="text-md font-medium text-gray-900">Team Member ${teamMemberCount}</h4>
                        <button type="button" onclick="removeTeamMember(this)" class="text-red-600 hover:text-red-800">
                            <i class="fas fa-trash"></i>
                        </button>
                    </div>
                    
                    <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
                        <div>
                            <label class="block text-sm font-medium text-gray-700">Name</label>
                            <input type="text" name="team[members][${teamMemberCount}][name]" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500">
                        </div>
                        
                        <div>
                            <label class="block text-sm font-medium text-gray-700">Position</label>
                            <input type="text" name="team[members][${teamMemberCount}][position]" placeholder="Personal Trainer" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500">
                        </div>
                        
                        <div class="sm:col-span-2">
                            <label class="block text-sm font-medium text-gray-700">Bio</label>
                            <textarea name="team[members][${teamMemberCount}][bio]" rows="3" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500"></textarea>
                        </div>
                        
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">Photo</label>
                            <div class="border-2 border-dashed border-gray-300 rounded-lg p-4 text-center hover:border-indigo-400 transition duration-200">
                                <i class="fas fa-user text-2xl text-gray-400 mb-2"></i>
                                <p class="text-sm text-gray-600 mb-2">Upload Photo</p>
                                <input type="file" id="teamPhoto${teamMemberCount}" name="team[members][${teamMemberCount}][photoFile]" accept="image/*" class="hidden" onchange="handleImageUpload(this, 'teamPhotoPreview${teamMemberCount}')">
                                <button type="button" onclick="document.getElementById('teamPhoto${teamMemberCount}').click()" class="bg-indigo-600 text-white px-3 py-1 rounded text-sm hover:bg-indigo-700 transition duration-200">
                                    Choose Photo
                                </button>
                            </div>
                            <div id="teamPhotoPreview${teamMemberCount}" class="mt-2 hidden">
                                <img class="w-24 h-24 object-cover rounded-full mx-auto" src="" alt="Photo Preview">
                            </div>
                        </div>
                        
                        <div>
                            <label class="block text-sm font-medium text-gray-700">Social Media Links</label>
                            <div class="space-y-2">
                                <input type="text" name="team[members][${teamMemberCount}][social][instagram]" placeholder="Instagram URL" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500">
                                <input type="text" name="team[members][${teamMemberCount}][social][linkedin]" placeholder="LinkedIn URL" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500">
                                <input type="text" name="team[members][${teamMemberCount}][social][email]" placeholder="Email" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500">
                            </div>
                        </div>
                    </div>
                </div>
            `;
            teamMembersList.insertAdjacentHTML('beforeend', memberHTML);
        }

        function removeTeamMember(button) {
            if (confirm('Remove this team member?')) {
                button.closest('.team-member-item').remove();
            }
        }

        // Add Benefit
        function addBenefit() {
            benefitCount++;
            const benefitsList = document.getElementById('benefitsList');
            const benefitHTML = `
                <div class="bg-gray-50 rounded-lg p-4 border border-gray-200 benefit-item">
                    <div class="flex justify-between items-center mb-3">
                        <h4 class="text-md font-medium text-gray-900">Benefit ${benefitCount}</h4>
                        <button type="button" onclick="removeBenefit(this)" class="text-red-600 hover:text-red-800">
                            <i class="fas fa-trash"></i>
                        </button>
                    </div>
                    
                    <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
                        <div>
                            <label class="block text-sm font-medium text-gray-700">Benefit Title</label>
                            <input type="text" name="benefits[items][${benefitCount}][title]" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500">
                        </div>
                        
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">Benefit Icon</label>
                            <div class="border-2 border-dashed border-gray-300 rounded-lg p-3 text-center hover:border-indigo-400 transition duration-200">
                                <input type="file" id="benefitIcon${benefitCount}" name="benefits[items][${benefitCount}][iconFile]" accept="image/*" class="hidden" onchange="handleIconUpload(this, 'benefitIconPreview${benefitCount}')">
                                <button type="button" onclick="document.getElementById('benefitIcon${benefitCount}').click()" class="text-sm text-indigo-600 hover:text-indigo-800">
                                    <i class="fas fa-upload mr-1"></i>Upload Icon
                                </button>
                                <div id="benefitIconPreview${benefitCount}" class="mt-2 hidden">
                                    <img class="w-12 h-12 object-contain mx-auto" src="" alt="Icon Preview">
                                </div>
                            </div>
                        </div>
                        
                        <div class="sm:col-span-2">
                            <label class="block text-sm font-medium text-gray-700">Description</label>
                            <textarea name="benefits[items][${benefitCount}][description]" rows="3" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500"></textarea>
                        </div>
                    </div>
                </div>
            `;
            benefitsList.insertAdjacentHTML('beforeend', benefitHTML);
        }

        function removeBenefit(button) {
            if (confirm('Remove this benefit?')) {
                button.closest('.benefit-item').remove();
            }
        }

        // Add FAQ
        function addFAQ() {
            faqCount++;
            const faqList = document.getElementById('faqList');
            const faqHTML = `
                <div class="bg-gray-50 rounded-lg p-4 border border-gray-200 faq-item">
                    <div class="flex justify-between items-center mb-3">
                        <h4 class="text-md font-medium text-gray-900">FAQ ${faqCount}</h4>
                        <button type="button" onclick="removeFAQ(this)" class="text-red-600 hover:text-red-800">
                            <i class="fas fa-trash"></i>
                        </button>
                    </div>
                    
                    <div class="space-y-4">
                        <div>
                            <label class="block text-sm font-medium text-gray-700">Question</label>
                            <input type="text" name="faq[items][${faqCount}][question]" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500">
                        </div>
                        
                        <div>
                            <label class="block text-sm font-medium text-gray-700">Answer</label>
                            <textarea name="faq[items][${faqCount}][answer]" rows="3" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500"></textarea>
                        </div>
                    </div>
                </div>
            `;
            faqList.insertAdjacentHTML('beforeend', faqHTML);
        }

        function removeFAQ(button) {
            if (confirm('Remove this FAQ?')) {
                button.closest('.faq-item').remove();
            }
        }

        // Auto-generate slug from title
        document.getElementById('title').addEventListener('input', function() {
            const title = this.value;
            const slug = title.toLowerCase()
                .replace(/[^a-z0-9 -]/g, '') // Remove invalid chars
                .replace(/\s+/g, '-') // Replace spaces with hyphens
                .replace(/-+/g, '-') // Replace multiple hyphens with single hyphen
                .trim('-'); // Remove leading/trailing hyphens
            document.getElementById('slug').value = slug;
        });

        // Initialize with some default content if creating new page
        document.addEventListener('DOMContentLoaded', function() {
            // Add one default service
            addService();
            // Add one default benefit
            addBenefit();
            // Add one default FAQ
            addFAQ();
            // Add one default concept feature
            addConceptFeature();
            // Add one default team member
            addTeamMember();
        });
    </script>
</body>
</html>
