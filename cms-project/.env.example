# Environment Configuration
NODE_ENV=production

# Server Configuration
PORT=3000

# Database Configuration (for local development)
MONGODB_URI=mongodb://localhost:27017/mca-cms

# Database Configuration (for Docker - uncomment when using Docker)
# MONGODB_URI=mongodb://cms_user:cms_password@mongodb:27017/mca-cms

# Session Configuration (CHANGE THIS IN PRODUCTION!)
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# Admin User Configuration
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=your-admin-password

# MongoDB Admin Credentials (for Docker Compose)
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=adminpassword
MONGO_INITDB_DATABASE=mca-cms

# Application Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./public/uploads

# Docker Configuration (used by docker-compose)
DOCKER_MONGODB_URI=mongodb://cms_user:cms_password@mongodb:27017/mca-cms
DOCKER_UPLOAD_PATH=/usr/src/app/public/uploads
