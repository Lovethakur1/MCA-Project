# Production Environment Variables
NODE_ENV=production
PORT=3000

# Database Configuration
MONGODB_URI=mongodb://cms_user:cms_password@mongodb:27017/mca-cms

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-change-this-in-production-make-it-very-long-and-random

# MongoDB Admin Credentials (for docker-compose)
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=adminpassword
MONGO_INITDB_DATABASE=mca-cms

# Application specific settings
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/usr/src/app/public/uploads
